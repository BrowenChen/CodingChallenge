extends layout

block content
	.container(ng-controller="mainController")
		.jumbotron.text-center
			h1
				| I'm a Todo-aholic
				span.label.label-info  {{ todos.length }}
		#todo-list.row
			.col-sm-4.col-sm-offset-4
				.checkbox(ng-repeat='todo in todos')
					label
						input(type='checkbox', ng-click='deleteTodo(todo._id)')
						| {{ todo.text }}
		#todo-form.row
			.col-sm-8.col-sm-offset-2.text-center
				form
					.form-group
						input.form-control.input-lg.text-center(type='text', placeholder='Add a todo right here', ng-model='formData.text')
					button.btn.btn-primary.btn-lg(type='submit', ng-click='createTodo()') Add
